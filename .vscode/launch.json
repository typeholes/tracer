{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--profile=TracerDebug",
        "${workspaceFolder}/playground"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "npm: dev"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dist/server/index.js",
      "args": ["3010"],
      "preLaunchTask": "npm: server:dev",
      "outFiles": [
        "${workspaceFolder}/dist/server/**/*.js"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Server/Extension",
      "configurations": ["Run Extension", "Launch Server"],
      "stopAll": true
    }
  ]
}
